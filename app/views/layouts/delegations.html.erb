<% content_for(:sidebar) do %>
  <ul class="nav nav-pills nav-stacked">
    <%= content_tag(:li, class: (params[:action] == 'show' ? 'active' : '')) do %>
      <%= link_to('View Delegation', delegation_path) %>
    <% end -%>
    <%= content_tag(:li, class: (['edit', 'update'].include?(params[:action]) ? 'active' : '')) do %>
      <%= link_to('Edit Delegation', edit_delegation_path) %>
    <% end -%>
    <%= content_tag(:li, class: (if params[:controller] == 'payments' then 'active' elsif current_user.delegation.andand.registration_finished? then '' else ' disabled' end)) do %>
      <%= link_to('Payment', current_user.delegation.andand.registration_finished? ? delegation_payments_path : '#') %>
    <% end -%>
  </ul>
<% end -%>
<%= render template: 'layouts/application' %>