<footer class="content-footer">
  <div class="container">
    <h4><%= Option.get('long_site_title') %></h4>

      <dl class="dl-horizontal">
        <dt>
           <%= icon('map-marker') %> <strong>Address:</strong>
        </dt>
        <dd>
          <%= Option.get('address') %>
        </dd>
        <dt>
           <%= icon('phone') %> <strong>Phone:</strong>
        </dt>
        <dd>
          <%= Option.get('phone') %>
        </dd>
        <dt>
           <%= icon('envelope') %> <strong>Email:</strong>
        </dt>
        <dd>
          <a href="mailto:<%= Option.get('main_email') %>"><%= Option.get('main_email') %></a>
        </dd>
      </dl>
    <div class="textwidget">
      <%= link_to "#{Option.get('site_title')} Home", Option.get('public_site_url') %>
      <span class="weak">|</span>
      <%= link_to 'Privacy Policy', privacy_policy_path %>
    </div>
    <div class="textwidget">
      Copyright 2010-2014 Yale Model Government Europe CZ, o.s.
    </div>
  </div>
  <!--[if lte IE 7]>
  <script type="text/javascript">
  $('browser-unsupported').show();
  </script>
  <![endif]-->
</footer>